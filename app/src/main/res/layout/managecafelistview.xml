<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/txtListProductImage"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="250dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtListProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name" />

        <TextView
            android:id="@+id/txtListProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Type" />

        <TextView
            android:id="@+id/txtListProductIsAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Is Product Available" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtListProductPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Price" />
</LinearLayout>